
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "sqlite"
}
        

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  email     String  @unique
  password  String

  // Self-referencing many-to-many (friends)
  friends   User[]  @relation("UserFriends")
  friendOf  User[]  @relation("UserFriends")
}
